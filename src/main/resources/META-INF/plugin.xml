<idea-plugin>
    <id>com.opencode</id>
    <name>OpenCode</name>
    <vendor>opencode</vendor>
    <description><![CDATA[
OpenCode is an AI-powered coding assistant that integrates directly into your IDE. 
It provides intelligent code suggestions, refactoring assistance, and automated development workflows 
through an intuitive terminal interface and tool window.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="OpenCode" secondary="false" icon="com.opencode.icons.OpenCodeIcons.ToolWindow" anchor="right" factoryClass="com.opencode.toolwindow.OpenCodeToolWindowFactory"/>
        <fileType name="OpenCode" implementationClass="com.opencode.editor.OpenCodeFileType" fieldName="INSTANCE" extensions="opencode"/>
        <fileEditorProvider implementation="com.opencode.editor.OpenCodeFileEditorProvider"/>
        <virtualFileSystem key="opencode" implementationClass="com.opencode.vfs.OpenCodeFileSystem"/>
        
        <!-- Settings -->
        <applicationConfigurable parentId="tools" instance="com.opencode.settings.OpenCodeConfigurable" 
                                id="com.opencode.settings.OpenCodeConfigurable" displayName="OpenCode"/>
    </extensions>

    <actions>
        <!-- Editor Context Menu Action -->
        <action id="OpenCode.AddFilepath" class="com.opencode.actions.AddFilepathAction" text="Add Filepath to OpenCode" description="Add current filepath to OpenCode terminal">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt K"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt K"/>
        </action>
        
        <!-- Main OpenCode Menu Group -->
        <group id="OpenCode.MainMenu" text="OpenCode" description="OpenCode actions" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            
            <action id="OpenCode.OpenTerminal" class="com.opencode.actions.OpenTerminalAction" text="Open OpenCode" description="Open OpenCode terminal">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl ESCAPE"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta ESCAPE"/>
            </action>
            
            <action id="OpenCode.OpenInEditor" class="com.opencode.actions.OpenInEditorAction" text="Open in Editor" description="Open OpenCode terminal in editor tab"/>
            
            <action id="OpenCode.ToggleToolWindow" class="com.opencode.actions.ToggleToolWindowAction" text="Toggle Tool Window" description="Show or hide OpenCode tool window">
                <keyboard-shortcut keymap="$default" first-keystroke="alt shift W"/>
            </action>
            
            <separator/>
            
            <action id="OpenCode.NewSession" class="com.opencode.actions.NewSessionAction" text="New Session..." description="Create a new OpenCode session">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift N"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift N"/>
            </action>
            
            <action id="OpenCode.ListSessions" class="com.opencode.actions.ListSessionsAction" text="List Sessions..." description="Show list of OpenCode sessions">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift O"/>
                <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift O"/>
            </action>
        </group>
    </actions>
</idea-plugin>
